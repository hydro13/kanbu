# Webhook events: issues, pull_request, push
GITHUB_APP_ID=
GITHUB_APP_NAME=kanbu-github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=
# Private key: Generate in GitHub App settings, store as base64 or file path
GITHUB_PRIVATE_KEY=
# Or use file path: GITHUB_PRIVATE_KEY_PATH=/path/to/private-key.pem
# Callback URL for OAuth flow
GITHUB_CALLBACK_URL=http://localhost:3001/api/github/callback

