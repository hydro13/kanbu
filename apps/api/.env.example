# Kanbu API Environment Variables

# Database (Prisma)
DATABASE_URL="postgresql://kanbu:kanbu_2025@localhost:5432/kanbu"

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT Authentication
JWT_SECRET=change-me-in-production-use-strong-secret
JWT_EXPIRES_IN=7d

# YouTube Data API v3 (for fetching video metadata)
# Get your key at: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your-youtube-api-key

# GitHub App Integration (Fase 2)
# Create a GitHub App at: https://github.com/settings/apps/new
# Required permissions: issues (r/w), pull_requests (r), contents (r), metadata (r)
# Webhook events: issues, pull_request, push
GITHUB_APP_ID=
GITHUB_APP_NAME=kanbu-github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=
# Private key: Generate in GitHub App settings, store as base64 or file path
GITHUB_PRIVATE_KEY=
# Or use file path: GITHUB_PRIVATE_KEY_PATH=/path/to/private-key.pem
# Callback URL for OAuth flow
GITHUB_CALLBACK_URL=http://localhost:3001/api/github/callback

# AI Provider Configuration (Fase 16)
# Choose provider: 'anthropic' or 'openai'
AI_PROVIDER=anthropic
# Anthropic Claude API (recommended)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
# OpenAI API (alternative)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Backup Configuration (Phase 1)
# Storage backend: 'local' or 'gdrive'
BACKUP_STORAGE=local
# Local storage path (for Coolify/Docker deployments)
BACKUP_LOCAL_PATH=/data/backups
# Google Drive path (for development machines with rclone mount)
BACKUP_GDRIVE_PATH=/home/robin/GoogleDrive/max-backups
# PostgreSQL container name (explicit, optional)
POSTGRES_CONTAINER=kanbu-postgres
# PostgreSQL container pattern (for dynamic Coolify container names)
POSTGRES_CONTAINER_PATTERN=postgres-
# Source code path (for source backups, defaults to /app in Docker)
KANBU_SOURCE_PATH=/home/robin/genx/v6/dev/kanbu

# Backup Encryption (Phase 4.1)
# Optional: Set to enable AES-256-GCM encryption at rest for backups
# Can be: 64-char hex string (32 bytes) or any passphrase (PBKDF2 derived)
# Leave empty to disable encryption
BACKUP_ENCRYPTION_KEY=
